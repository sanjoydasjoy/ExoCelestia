[flake8]
# Configuration for flake8 linting

# Maximum line length
max-line-length = 100

# Maximum code complexity
max-complexity = 10

# Ignore specific errors
ignore = E203,E501,W503,E722  # See docs for meaning

# Exclude directories
exclude =
    .git,
    __pycache__,
    .pytest_cache,
    .venv,
    venv,
    env,
    build,
    dist,
    *.egg-info,
    .eggs,
    node_modules,
    frontend,
    .github,
    .next

# Per-file ignores
per-file-ignores =
    __init__.py:F401
    */tests/*:F401,F811

# Show source code for each error
show-source = True

# Show statistics at the end
statistics = True

# Count errors
count = True

